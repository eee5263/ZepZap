<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameMainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/topScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Top Score: "
            android:textSize="17sp" />

        <TextView
            android:id="@+id/gameRuleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_rule"
            android:layout_below="@+id/topScoreText"
            android:layout_weight="1"
            android:textSize="17sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Game"
            android:id="@+id/startGameBtn"
            android:layout_below="@+id/gameRuleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>